{
    "name": "pluswerk/grumphp-typoscript-task",
    "description": "Connects the TypoScript linter from Martin Helmich with grumphp and adds some sniffer.",
    "type": "library",
    "license": "MIT",
    "keywords": ["TYPO3 CMS", "TypoScript"],
    "authors": [
        {
            "name": "Sebastian Hofer",
            "email": "sebastian.hofer@pluswerk.ag",
            "homepage": "http://pluswerk.ag",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "helmich/typo3-typoscript-lint": "^2.0",
        "typo3/minimal": "^9.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "pluswerk/grumphp-config": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Pluswerk\\TypoScriptLinter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pluswerk\\TypoScriptLinter\\Tests\\": "tests"
        }
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        },
        "pluswerk/grumphp-config": {
            "auto-setting": false
        },
        "grumphp": {
            "config-default-path": "grumphp.yml"
        }
    }
}
